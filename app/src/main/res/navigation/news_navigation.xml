<?xml version="1.0" encoding="utf-8"?>
<navigation
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/news_navigation"
        app:startDestination="@id/homeFragment">

    <fragment
            android:id="@+id/homeFragment"
            android:name="com.avery.newsplus.home.HomeFragment"
            android:label="fragment_home"
            tools:layout="@layout/fragment_home"/>

    <fragment android:id="@+id/listFragment"
              android:name="com.avery.newsplus.list.NewsListFragment"
              android:label="fragment_list"
              tools:layout="@layout/fragment_list">
        <action android:id="@+id/action_listFragment_to_detailsFragment"
                app:destination="@id/detailsFragment"/>
    </fragment>

    <fragment android:id="@+id/detailsFragment"
              android:name="com.avery.newsplus.details.DetailsFragment"
              android:label="fragment_details"
              tools:layout="@layout/fragment_details"/>
</navigation>